<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.estadisticas.StatisticsController"
      spacing="20"
      styleClass="statistics-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="游늵 Estad칤sticas" styleClass="page-title"/>

    <!-- Pesta침as para equipos y jugadores -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab text="游 Equipos">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="txtSearchTeam" promptText="Buscar equipo..." prefWidth="300"/>
                        <Button text="游댌 Buscar" onAction="#handleSearchTeam"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Ver Todos" onAction="#handleViewAllTeams"/>
                    </HBox>
                    <ScrollPane fitToWidth="true" vbarPolicy="AS_NEEDED">
                        <VBox fx:id="teamsContainer" spacing="10" alignment="TOP_CENTER">
                            <!-- Los equipos se cargar치n din치micamente -->
                        </VBox>
                    </ScrollPane>
                </VBox>
            </Tab>
            <Tab text="游녻 Jugadores">
                <VBox spacing="15">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <TextField fx:id="txtSearchPlayer" promptText="Buscar jugador..." prefWidth="300"/>
                        <ComboBox fx:id="comboTeamFilter" promptText="Filtrar por equipo" prefWidth="200"/>
                        <Button text="游댌 Buscar" onAction="#handleSearchPlayer"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Ver Todos" onAction="#handleViewAllPlayers"/>
                    </HBox>
                    <TableView fx:id="tablePlayers" prefHeight="400">
                        <columns>
                            <TableColumn text="Nombre" prefWidth="200"/>
                            <TableColumn text="Equipo" prefWidth="150"/>
                            <TableColumn text="Posici칩n" prefWidth="100"/>
                            <TableColumn text="PPG" prefWidth="80"/>
                            <TableColumn text="RPG" prefWidth="80"/>
                            <TableColumn text="APG" prefWidth="80"/>
                            <TableColumn text="Acci칩n" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

</VBox>
