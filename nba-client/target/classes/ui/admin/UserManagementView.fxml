<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.admin.UserManagementController"
      spacing="20"
      styleClass="user-management-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Cabecera -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="â† Volver" onAction="#handleBack"/>
        <Label text="ðŸ‘¥ GestiÃ³n de Usuarios" styleClass="page-title"/>
    </HBox>

    <!-- Filtros -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="txtSearch"
                   promptText="Buscar usuario..."
                   prefWidth="250"/>

        <ComboBox fx:id="comboRoleFilter"
                  promptText="Filtrar por rol"
                  prefWidth="200"/>

        <ComboBox fx:id="comboStatusFilter"
                  promptText="Filtrar por estado"
                  prefWidth="200"/>

        <Button text="ðŸ” Buscar" onAction="#handleSearch"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="ðŸ”„ Actualizar" onAction="#handleRefresh"/>
    </HBox>

    <!-- Tabla -->
    <TableView fx:id="tableUsers" prefHeight="450">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colUsername" text="Usuario" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Correo" prefWidth="200"/>
            <TableColumn fx:id="colRole" text="Rol" prefWidth="120"/>
            <TableColumn fx:id="colPoints" text="Puntos" prefWidth="100"/>
            <TableColumn fx:id="colStatus" text="Estado" prefWidth="100"/>
            <TableColumn fx:id="colCreated" text="Fecha Registro" prefWidth="150"/>
            <TableColumn fx:id="colLastLogin" text="Ãšltimo Acceso" prefWidth="150"/>
            <TableColumn fx:id="colActions" text="Acciones" prefWidth="200"/>
        </columns>
    </TableView>

    <!-- Acciones -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="âœï¸ Editar Seleccionado"
                onAction="#handleEditSelected"
                prefWidth="180"/>

        <Button text="ðŸ”’ Cambiar Rol"
                onAction="#handleChangeRole"
                prefWidth="150"/>

        <Button text="ðŸš« Desactivar Seleccionado"
                onAction="#handleDeactivateSelected"
                styleClass="danger-button"
                prefWidth="200"/>

        <Button text="âœ… Activar Seleccionado"
                onAction="#handleActivateSelected"
                prefWidth="180"/>

        <Region HBox.hgrow="ALWAYS"/>

        <Label fx:id="lblSelectedCount"
               text="0 usuarios seleccionados"
               styleClass="info-label"/>
    </HBox>

    <!-- EstadÃ­sticas -->
    <HBox spacing="20" alignment="CENTER">
        <VBox styleClass="stat-card" alignment="CENTER">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Total Usuarios" styleClass="stat-label"/>
            <Label fx:id="lblTotalUsers" text="0" styleClass="stat-value"/>
        </VBox>

        <VBox styleClass="stat-card" alignment="CENTER">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Usuarios Activos" styleClass="stat-label"/>
            <Label fx:id="lblActiveUsers" text="0" styleClass="stat-value"/>
        </VBox>

        <VBox styleClass="stat-card" alignment="CENTER">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="Administradores" styleClass="stat-label"/>
            <Label fx:id="lblAdmins" text="0" styleClass="stat-value"/>
        </VBox>
    </HBox>

</VBox>
