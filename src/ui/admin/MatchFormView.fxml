<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.admin.MatchFormController"
      spacing="20"
      styleClass="match-form-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Cabecera -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <Button text="← Volver" onAction="#handleBack"/>
        <Label fx:id="lblFormTitle"
               text="Crear Partido"
               styleClass="page-title"/>
    </HBox>

    <!-- Formulario -->
    <VBox spacing="15" styleClass="form-container">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints minWidth="150"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <!-- Equipos -->
            <Label text="Equipo Local:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboHomeTeam"
                      GridPane.rowIndex="0"
                      GridPane.columnIndex="1"/>

            <Label text="Equipo Visitante:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboAwayTeam"
                      GridPane.rowIndex="1"
                      GridPane.columnIndex="1"/>

            <!-- Fecha -->
            <Label text="Fecha del Partido:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <DatePicker fx:id="dateMatch"/>
                <TextField fx:id="txtTime" promptText="HH:mm"/>
            </HBox>

            <!-- Estado -->
            <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="comboStatus"
                      GridPane.rowIndex="3"
                      GridPane.columnIndex="1"/>

            <!-- Marcadores -->
            <Label text="Puntos Equipo Local:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="txtHomeScore"
                       GridPane.rowIndex="4"
                       GridPane.columnIndex="1"/>

            <Label text="Puntos Equipo Visitante:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextField fx:id="txtAwayScore"
                       GridPane.rowIndex="5"
                       GridPane.columnIndex="1"/>

            <!-- Descripción -->
            <Label text="Descripción:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <TextArea fx:id="txtDescription"
                      prefRowCount="3"
                      wrapText="true"
                      GridPane.rowIndex="6"
                      GridPane.columnIndex="1"/>
        </GridPane>

        <Label fx:id="lblError"
               text=""
               visible="false"
               managed="false"
               styleClass="error-label"/>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Cancelar" onAction="#handleCancel" prefWidth="150"/>
            <Button text="Guardar" onAction="#handleSave"
                    prefWidth="150"
                    styleClass="primary-button"/>
        </HBox>
    </VBox>

</VBox>
