    </HBox>

    <!-- Filtros -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="txtSearch"
                   promptText="Buscar partido..."
                   prefWidth="250"/>

        <ComboBox fx:id="comboStatusFilter"
                  promptText="Filtrar por estado"
                  prefWidth="200"/>

