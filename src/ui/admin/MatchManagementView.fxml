    <!-- Tabla -->
    <TableView fx:id="tableMatches" prefHeight="450">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colDate" text="Fecha" prefWidth="150"/>
            <TableColumn fx:id="colHome" text="Equipo Local" prefWidth="200"/>
            <TableColumn fx:id="colAway" text="Equipo Visitante" prefWidth="200"/>
