<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.ui.ConfirmationDialogController"
            styleClass="confirmation-dialog">

    <headerText>
        <Label fx:id="lblTitle" text="Confirmar Acción"/>
    </headerText>

    <content>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label fx:id="lblMessage" text="¿Estás seguro de realizar esta acción?" styleClass="dialog-message" wrapText="true"/>
        </VBox>
    </content>

    <buttonTypes>
        <ButtonType text="Cancelar" buttonData="CANCEL_CLOSE"/>
        <ButtonType text="Confirmar" buttonData="OK_DONE"/>
    </buttonTypes>

</DialogPane>
