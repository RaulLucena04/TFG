<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.partidos.crear_apuesta.CreateBetController"
      spacing="20"
      styleClass="create-bet-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text=" Crear Nueva Apuesta" styleClass="page-title"/>

    <!-- Informaci贸n del partido -->
    <VBox spacing="10" styleClass="info-card">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <Label text="Partido:" styleClass="info-label"/>
        <Label fx:id="lblMatchInfo" text="Equipo Local vs Equipo Visitante" styleClass="info-value"/>
        <Label text="Fecha:" styleClass="info-label"/>
        <Label fx:id="lblMatchDate" text="Fecha del partido" styleClass="info-value"/>
    </VBox>

    <!-- Selecci贸n de apuesta -->
    <VBox spacing="15">
        <Label text="Selecciona tu predicci贸n:" styleClass="section-title"/>
        
        <ToggleGroup fx:id="betTypeGroup"/>
        <RadioButton text="Ganador del partido" toggleGroup="$betTypeGroup" selected="true" fx:id="radioWinner"/>
        <RadioButton text="Diferencia de puntos" toggleGroup="$betTypeGroup" fx:id="radioPointDiff"/>
        <RadioButton text="Total de puntos" toggleGroup="$betTypeGroup" fx:id="radioTotalPoints"/>
    </VBox>

    <!-- Opciones de apuesta seg煤n el tipo -->
    <VBox fx:id="betOptionsContainer" spacing="15">
        <!-- Se mostrar谩 din谩micamente seg煤n el tipo de apuesta -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Selecciona equipo ganador:"/>
            <ComboBox fx:id="comboWinner" prefWidth="200" visible="true"/>
        </HBox>
    </VBox>

    <!-- Cantidad de puntos -->
    <VBox spacing="10">
        <Label text="Cantidad de puntos a apostar:" styleClass="section-title"/>
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="txtBetAmount" promptText="Cantidad" prefWidth="150"/>
            <Label fx:id="lblAvailablePoints" text="Puntos disponibles: 0" styleClass="info-label"/>
        </HBox>
        <Slider fx:id="sliderBetAmount" min="10" max="1000" value="100" showTickLabels="true" showTickMarks="true" majorTickUnit="100" prefWidth="Infinity"/>
    </VBox>

    <!-- Cuotas y ganancia potencial -->
    <VBox spacing="10" styleClass="info-card">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>
        <Label text="Cuota:" styleClass="info-label"/>
        <Label fx:id="lblOdds" text="1.00" styleClass="info-value"/>
        <Label text="Ganancia potencial:" styleClass="info-label"/>
        <Label fx:id="lblPotentialWin" text="0 puntos" styleClass="info-value"/>
    </VBox>

    <!-- Botones de acci贸n -->
    <HBox spacing="15" alignment="CENTER">
        <Button text="Cancelar" onAction="#handleCancel" prefWidth="150"/>
        <Button text="Confirmar Apuesta" onAction="#handleConfirmBet" styleClass="primary-button" prefWidth="200"/>
    </HBox>

    <Label fx:id="lblError" text="" styleClass="error-label" visible="false" managed="false"/>

</VBox>
